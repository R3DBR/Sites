

namespace Praticas
{
    class Program
    {


        //Calculadora 
        static void pratica3()
        {
            Console.WriteLine("Digite um numero: ");
            string num1S = Console.ReadLine().Replace(".", ",");
            double num1;

            if (double.TryParse(num1S, out num1))
            {
                Console.WriteLine("Digite outro numero: ");
                string num2S = Console.ReadLine().Replace(".",",");
                double num2;

                if (double.TryParse(num2S, out num2))
                {
                    Console.WriteLine("Escolha um operador: |+|-|*|/|");
                    string escolha = Console.ReadLine();

                    switch (escolha)
                    {
                        case "+":
                            Console.WriteLine($"Seu resultado foi: {num1 + num2}");
                            break;

                        case "-":
                            Console.WriteLine($"Seu resultado foi: {num1 - num2}");
                            break;

                        case "*":
                            Console.WriteLine($"Seu resultado foi: {num1 * num2}");
                            break;

                        case "/":
                            Console.WriteLine($"Seu resultado foi: {num1 / num2}");
                            break;

                    }
                }
                else
                {
                    Console.WriteLine("Infelizmente houve um erro :( /n tente novamente");
                    Console.ReadKey();
                    pratica3();
                }
            }
            else
            {
                Console.WriteLine("Infelizmente houve um erro :( /n tente novamente");
                Console.ReadKey();
                pratica3();
            }


        }

        //Medidor de Idade
        static void pratica4()
        {
            Console.WriteLine("Insira sua idade: ");
            string idadeS = Console.ReadLine();
            int idade;

            if (int.TryParse(idadeS, out idade))
            {
                if (idade >= 18)
                {
                    Console.WriteLine("Maior de Idade");
                }
                else
                {
                    Console.WriteLine("Menor de Idade");
                }
            }
        }

        //Aprovador, Reprovador e Recuperação
        static void pratica5()
        {
            Console.WriteLine("Insira sua nota: ");
            string notaS = Console.ReadLine();
            int nota;

            if (int.TryParse(notaS, out nota))
            {
                if (nota <= 4)
                {
                    Console.WriteLine("Reprovado");
                }
                else if (nota <= 6 && nota >= 5)
                {
                    Console.WriteLine("Recuperação");
                }
                else
                {
                    Console.WriteLine("Aprovado");
                }
            }
        }


        //Dado de Dias
        enum dias
        {
            Domingo=1,
            Segunda,
            Terça,
            Quarta,
            Quinta,
            Sexta,
            Sabado
        }
        static void pratica6()
        {
            Console.WriteLine("Escolha um numero de 1 a 7: ");
            string numS = Console.ReadLine();
            int num;
            

            if (int.TryParse(numS, out num))
            {
                dias dia = (dias)num;
                Console.WriteLine($"O numero que voce escolheu corresponde a {dia} na semana");
            }
        }

        //Contar de 1 a 3 com while

        static void pratica7()
        {
            int cnt = 0;

            while (cnt < 3)
            {
                cnt += 1;
                Console.WriteLine($"Contando: {cnt}");
            }
        }

        //contar os numeros pares de 2 a 10
        static void pratica8()
        {
            for (int i = 2; i <= 10; i++)
            {
                if (i % 2 == 0)
                {
                    Console.WriteLine(i);
                }
            }
        }

        //Mostrar 5 numeros de um Array
        static void pratica9()
        {
            Console.WriteLine("Diga 5 numeros com espaços entre eles \nExemplo: 1 2 3 4 5");
            string num_S = Console.ReadLine();
            string[] num_SA = num_S.Split(' ');
            
            if (num_SA.Length == 1)
            {
                Console.WriteLine("Você digitou somente um numero!");
            }
            else
            {
                for (int i = 0; i < num_SA.Length; i++)
                {
                    Console.WriteLine(num_SA[i]);
                }
            }

        }

        //Crie um metodo de somar e use o Main para chamar o metodo
        static void pratica10()
        {
            Console.WriteLine("Digite um numero: ");
            double num1 = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Digite outro numero: ");
            double num2 = Convert.ToDouble(Console.ReadLine());

            double res = num1 + num2;

            Console.WriteLine($"Sua soma foi: {res}");


        }
        static void Main(string[] args)
        {
            pratica10();
        }
    }
}
